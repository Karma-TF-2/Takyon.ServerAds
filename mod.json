{
	"Name": "Takyon.ServerAds",
	"Description": "Sends periodic server messages",
	"LoadPriority": 1,
	"RequiredOnClient": false,
	"Version": "0.0.1",
	"ConVars": [
		{
			"Name": "sa_time_between_ads",
			"DefaultValue": "0.2" // time between ads being sent in minutes. DO NOT SPAM
		},
		{
			"Name": "sa_ads_enabled",
			"DefaultValue": "1" // wether or not ads are enabled on the server. | 0: disaled | 1: enabled
		}
	],
	"Scripts": [
		{
			"Path": "takyon_ads.nut",
			"RunOn": "SERVER",
			"ServerCallback": {
				"After": "AdInit"
			}
		},
		{
			"Path": "takyon_serverads.nut",
			"RunOn": "SERVER",
			"ServerCallback": {
				"After": "ServerAdsInit"
			}
		}
	]
}